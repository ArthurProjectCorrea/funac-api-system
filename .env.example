# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/funac_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Security
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_MIXED_CASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# MFA
MFA_REQUIRED_ROLES="system_admin,department_manager"
MFA_OPTIONAL_ROLES="social_worker,external_user"
MFA_TOTP_WINDOW=2

# Session
SESSION_INACTIVITY_TIMEOUT="15m"
MAX_CONCURRENT_SESSIONS=5

# Rate Limiting
RATE_LIMIT_LOGIN_TTL=900
RATE_LIMIT_LOGIN_LIMIT=5
RATE_LIMIT_RESET_TTL=3600
RATE_LIMIT_RESET_LIMIT=3
RATE_LIMIT_EMAIL_TTL=3600
RATE_LIMIT_EMAIL_LIMIT=3

# Tokens
TOKEN_ACCESS_EXPIRY="15m"
TOKEN_REFRESH_EXPIRY="7d"
TOKEN_EMAIL_EXPIRY="1h"
TOKEN_RESET_EXPIRY="30m"
TOKEN_INVITATION_EXPIRY="72h"

# Email Configuration
EMAIL_FROM="noreply@funac.gov.br"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Application
PORT=3000
NODE_ENV=development
